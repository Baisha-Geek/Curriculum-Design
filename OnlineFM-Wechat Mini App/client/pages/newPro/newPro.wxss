/* 选择成员模态框 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 200px;
  position: fixed;
  top: 50%;
  left:50%;
  height: 200px;
  z-index: 9999;
  background: #fff;
  opacity: 1;
  margin: -100px;
  border-radius: 4px;
}

.modal-head {
  padding: 4px;
  font-size: 16px;
  color: #030303;
  text-align: center;
  background-color:#f9f9f9;
}

.modal-content {
  overflow-y: scroll;
  height: 144px;
  padding: 2px;
  box-sizing: border-box;
  font-size: 14px
}
.checkbox{
  margin-bottom:4px;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 28px;
  border-top: 1px solid #dedede;
  font-size: 16px;
  /* line-height: 20px; */
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
