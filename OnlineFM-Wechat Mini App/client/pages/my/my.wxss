/* pages/my/my.wxss */
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.userinfo{
  position: absolute;
  top: 0;
  width: 100%;
  padding: 20px;
  height:60px;
  margin-bottom: 10px;
  background-color:#fff;
  border-bottom:10px solid #f9f9f9
}
.userinfo-avatar{
  width: 50px;
  height: 50px;
  border-radius: 25px;
  padding: 0;
  position: absolute;
  left: 50%;
  margin-left:-25px;
}
.clear{
  clear:both;
}
 .tunnel {
    margin-top: 40rpx;
    height: 140rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}
